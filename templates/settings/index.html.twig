{% extends 'base.html.twig' %}

{% block title %}Hello SettingsController!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        ShootProof Integration Status
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <div class="list-group-item text-center"><span class="badge {% if isKeyValid %}badge-success {% else %}badge-danger{% endif %}">{% if isKeyValid %}Connected{% else %}Not Connected{% endif %}</span></div>
                            <div class="list-group-item text-center"><a href="/authorize/shootproof"><button class="btn btn-primary" type="button">Authorize</button></a></div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
